<resources>
    <!-- Base application theme. -->
        <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowActionBar">false</item>
        </style>

        <!-- Main activity theme. -->
        <style name="MSBTETheme" parent="AppTheme">
            <item name="actionBarStyle">@style/ActionBar.Solid.MSBTETheme.NoTitle</item>
        </style>

        <!-- Settings activity theme. -->
        <style name="SettingsTheme" parent="AppTheme"></style>

        <!-- main activity action bar styles -->
        <style name="ActionBar.Solid.MSBTETheme.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
            <item name="displayOptions">showTitle|showHome</item>
            <item name="icon">@mipmap/ic_launcher</item>
        </style>

</resources>
